<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/world_clock_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/list_item_text_margin"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:id="@id/information_panel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/worldclock_list_item_information_panel_margin_bottom">
