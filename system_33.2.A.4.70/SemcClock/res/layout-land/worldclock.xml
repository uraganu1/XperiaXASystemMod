<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layoutDirection="locale"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="@dimen/clock_size" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/world_clock_margin_under" android:layout_marginStart="@dimen/clock_margin_start" android:layout_marginEnd="@dimen/clock_margin_end">
        <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/worldclock_map_landscape" android:layout_centerInParent="true" />
        <FrameLayout android:id="@id/clock_frame" android:layout_width="@dimen/clock_size" android:layout_height="@dimen/clock_size" android:layout_marginBottom="@dimen/world_clock_margin_under" android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.sonyericsson.organizer.MenuButtonFrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentEnd="true" style="@style/MenuButtonStyle" />
        <FrameLayout android:id="@id/list_frame" android:paddingTop="@dimen/clock_margin_over_list" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <com.sonyericsson.organizer.FABFrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" style="@style/FAB" />
    </RelativeLayout>
</LinearLayout>