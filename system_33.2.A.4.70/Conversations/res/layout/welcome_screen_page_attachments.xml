<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/tutorial_attachments" android:background="?android:colorPrimary" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/tutorial_attachments_bitmap" android:elevation="@dimen/actionbar_elevation" android:outlineProvider="bounds" />
        <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
