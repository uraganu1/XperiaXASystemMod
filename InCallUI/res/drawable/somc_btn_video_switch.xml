<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@id/backgroundItem" android:drawable="@drawable/btn_background" />
    <item>
        <selector>
            <item android:state_enabled="false">
                <bitmap android:gravity="center" android:src="@drawable/btn_ic_vid_camera_switch" android:tint="@color/button_disabled_color" android:autoMirrored="true" />
            </item>
            <item android:state_selected="true">
                <bitmap android:gravity="center" android:src="@drawable/btn_ic_vid_camera_switch" android:tint="@color/button_default_color" android:autoMirrored="true" />
            </item>
            <item android:state_pressed="true">
                <bitmap android:gravity="center" android:src="@drawable/btn_ic_vid_camera_switch" android:tint="@color/button_default_color" android:autoMirrored="true" />
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/btn_ic_vid_camera_switch" android:tint="@color/button_default_color" android:autoMirrored="true" />
            </item>
        </selector>
    </item>
</layer-list>