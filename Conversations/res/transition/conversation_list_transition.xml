<?xml version="1.0" encoding="utf-8"?>
<transitionSet android:transitionOrdering="together"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <fade android:duration="300" android:fadingMode="fade_out">
        <targets>
            <target android:targetId="@id/conversationlist_item" />
        </targets>
    </fade>
    <changeBounds android:interpolator="@android:interpolator/decelerate_cubic" android:duration="300">
        <targets>
            <target android:targetId="@id/conversationlist_item" />
        </targets>
    </changeBounds>
    <fade android:duration="150" android:fadingMode="fade_in" android:startDelay="150">
        <targets>
            <target android:targetId="@id/conversationlist_item" />
        </targets>
    </fade>
</transitionSet>